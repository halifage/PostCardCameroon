<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">

    <ImageView
        android:id="@+id/rond_point"
        android:src="@drawable/rondpointdiedo"
        android:layout_width="match_parent"
        android:layout_height="175dp"
        android:scaleType="centerCrop"
        android:layout_alignParentBottom="true"
        />
    <ImageView
        android:id="@+id/falls"
        android:src="@drawable/ekomnkamfalls"
        android:layout_width="match_parent"
        android:scaleType="centerCrop"
        android:layout_height="175dp"
        android:layout_alignParentTop="true" />
    <ImageView
        android:id="@+id/yaounde"
        android:src="@drawable/yaounde"
        android:layout_width="250dp"
        android:layout_height="250dp"
        android:layout_alignParentRight="true"
        android:layout_above="@id/rond_point"
        android:layout_below="@id/falls"
        android:scaleType="centerCrop"/>
    <ImageView
        android:id="@+id/map"
        android:src="@drawable/map"
        android:layout_width="150dp"
        android:layout_height="200dp"
        android:layout_above="@id/rond_point"
        android:layout_below="@id/falls"
        android:layout_alignParentLeft="true"
        android:scaleType="centerCrop" />
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Ekom Nkam falls"
        android:textStyle="italic|bold"
        android:textSize="16sp"
        android:textColor="@android:color/white"
        android:fontFamily="sans-serif-light"
        android:layout_alignParentRight="true"
        android:layout_alignParentTop="true"
        android:padding="24dp"/>
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Rond-point Deido"
        android:textSize="16sp"
        android:textColor="@android:color/black"
        android:textStyle="italic|bold"
        android:fontFamily="sans-serif-light"
        android:layout_alignParentRight="true"
        android:layout_alignParentBottom="true"
        android:paddingBottom="144dp"
        android:paddingRight="24dp"/>

</RelativeLayout>